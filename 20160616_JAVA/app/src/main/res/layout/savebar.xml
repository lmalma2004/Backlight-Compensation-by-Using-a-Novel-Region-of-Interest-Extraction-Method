<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp">


    <ImageButton
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_share_white_18dp"
        android:id="@+id/upload"
        android:layout_alignTop="@+id/download"
        android:layout_toLeftOf="@+id/download"
        android:layout_toStartOf="@+id/download" />

    <ImageButton
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_file_download_white_18dp"
        android:id="@+id/download"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <ImageButton
        android:background="@drawable/smartcut"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>