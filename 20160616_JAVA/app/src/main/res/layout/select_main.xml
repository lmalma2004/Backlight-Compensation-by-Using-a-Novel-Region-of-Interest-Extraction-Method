<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sungshin.myapplication.Selectmode">

    <LinearLayout
        android:adjustViewBounds="true"
        android:layout_weight="6"
        android:id="@+id/imagepos"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        >
        <ImageView
            android:adjustViewBounds = "true"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:id="@+id/imageView22" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background = "@drawable/cut">

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paint_color"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#ff000000"
                android:onClick="clicked"
                android:tag = "#55000000"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#ffff0000"
                android:onClick="clicked"
                android:tag = "#55ff0000"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#ffff6600"
                android:onClick="clicked"
                android:tag = "#55ff6600"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#ffffcc00"
                android:onClick="clicked"
                android:tag = "#55ffcc00"/>



            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#ff009900"
                android:onClick="clicked"
                android:tag = "#55009900"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#ff0000cc"
                android:onClick="clicked"
                android:tag = "#550000cc"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>